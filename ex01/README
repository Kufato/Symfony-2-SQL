# Get the Doctrine ORM bundle
composer require symfony/orm-pack --dev

# Get the MakerBundle to be able to do the "make:entity" command
composer require symfony/maker-bundle --dev

# Get the Twig Bundle
composer require symfony/twig-bundle --dev

# Define the entity User
php bin/console make:entity User

# Command to clear the cache before the launch
bin/console cache:clear

# Command to see the routes that was put in place
bin/console debug:router

# Command to launch the project
symfony serve

# The address of the main page
http://127.0.0.1:8000/ex01

# Connection to the database (root)
mysql -u root -p

# Select the right database
USE ex01;

# Check the table
DESCRIBE users;

CREATE DATABASE ex03 CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
