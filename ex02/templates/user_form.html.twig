{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block content %}
    <h1>Ajouter un utilisateur</h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}

    {% if message %}
        <p>{{ message }}</p>
    {% endif %}

    <button><a href="{{ path('user_list') }}" class="btn btn-primary mt-3">Voir la liste des utilisateurs</a></button>
{% endblock %}
