{% extends 'base.html.twig' %}

{% block content %}
<h1>Liste des produits</h1>

<form method="get">
    Catégorie:
    <select name="category">
        <option value="">Toutes</option>
        {% for cat in categories %}
            <option value="{{ cat.id }}" {% if cat.id == selectedCategory %}selected{% endif %}>
                {{ cat.name }}
            </option>
        {% endfor %}
    </select>
    <button type="submit">Filtrer</button>
</form>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th><a href="?sort=name&order={{ sort=='name' and order=='ASC' ? 'DESC' : 'ASC' }}">Nom</a></th>
            <th><a href="?sort=price&order={{ sort=='price' and order=='ASC' ? 'DESC' : 'ASC' }}">Prix</a></th>
            <th><a href="?sort=expiry_date&order={{ sort=='expiry_date' and order=='ASC' ? 'DESC' : 'ASC' }}">Date de péremption</a></th>
            <th>Catégorie</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.expiry_date }}</td>
                <td>{{ product.category_name }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}